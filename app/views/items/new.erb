<h3>Form_for</h3>

<% @errors && @errors.each do |e| %>
  <li><%=e%></li>
<%end%>

<%=form_for(@item) do |f|%>
  <%=f.label("Item Name:") %>
  <%=f.text_field(:name) %>
  <%=f.label("Measurements:") %>
  <%=f.fields_for :measurements do |m| %>
    <%=m.label "Quantity"%>
    <%=m.number_field :quantity%>
    <%=m.label "Units"%>
    <%=m.text_field :unit%>
  <%end%>
  <%=f.submit "Submit"%>
<%end%>
