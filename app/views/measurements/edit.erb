<%=render(partial: "application/errors", locals: {errors: @measurement.errors.full_messages})%>

<h3>Editing Measurement for <%=@measurement.item.name%></h3>

<%= form_for(@measurement) do |f|%>
  <%=f.label "Quantity"%>
  <%=f.number_field(:quantity)%>
  <%=f.label "Units"%>
  <%=f.text_field(:unit)%>
  <%=f.submit("Save")%>
<%end%>
